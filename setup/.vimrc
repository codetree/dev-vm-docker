set nocompatible
syntax on

filetype off
filetype plugin indent on

set encoding=utf-8
set autoindent
set nosmartindent
set history=10000
set number
set background=dark
set hidden
set backspace=indent,eol,start
set textwidth=0

set tabstop=2
set shiftwidth=2
set softtabstop=2
set expandtab

set backupdir=./tmp,~/tmp,.
set directory=./tmp,~/tmp,/var/tmp,/tmp,.
set undodir=./tmp,~/tmp,.

set ignorecase
set smartcase
set gdefault
set incsearch
set showmatch
set hlsearch
